<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_show_fact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1EE"
    tools:context=".activities.ShowFactFragment">

    <TextView
        android:id="@+id/txtShowFact"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="44dp"
        android:text="Dummy fact"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnShowFact"
        app:layout_constraintStart_toStartOf="@+id/btnShowFact" />

    <Button
        android:id="@+id/btnShowFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="314dp"
        android:text="Get Another"
        app:backgroundTint="#535151"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="56dp"
        android:text="Back"
        app:backgroundTint="#535151"
        app:layout_constraintStart_toStartOf="@+id/btnShowFact"
        app:layout_constraintTop_toBottomOf="@+id/btnShowFact" />

</androidx.constraintlayout.widget.ConstraintLayout>