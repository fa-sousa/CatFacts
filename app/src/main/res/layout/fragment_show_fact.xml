<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_show_fact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShowFactFragment">

    <TextView
        android:id="@+id/txtShowFact"
        android:layout_width="154dp"
        android:layout_height="0dp"
        android:layout_marginTop="179dp"
        android:layout_marginBottom="65dp"
        android:text="Dummy Fact"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnShowFact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnShowFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="400dp"
        android:text="Get Another"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtShowFact"
        app:layout_constraintTop_toBottomOf="@+id/txtShowFact"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>