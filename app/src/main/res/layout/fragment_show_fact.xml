<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShowFactFragment">

    <TextView
        android:id="@+id/txtShowFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:padding="25dp"
        android:text="Dummy Fact"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/btnShowFact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnShowFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="291dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Get Another"
        app:layout_constraintEnd_toEndOf="@+id/txtShowFact"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnBackChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/btnShowFact"
        app:layout_constraintTop_toBottomOf="@+id/btnShowFact"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>